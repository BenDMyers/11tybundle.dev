---js
{
  eleventyComputed: {
    title: "Posts in '{{ category }}'",
    description: "Posts in the 11ty Bundle with the category: {{ category }}",
    permalink: "/categories/{{ category | slugify }}/",
    keywords: "categories, {{ category }}, 11ty Bundle, 11ty, eleventy, blog posts",
  },
  pagination:  {
    data: "bundledata.bundleRecords",
    size: 1,
    alias: "category",
    addAllPagesToCollections: "true",
    before: function(data) {
      // create a unique set of categories from the Airtable data
      // sorted alphabetically
      let categorySet = new Set();
      for (let item of data) {
        (item.Categories || []).forEach((category) => categorySet.add(category));
    }
    return Array.from(categorySet).sort((a, b) => {
      return a > b ? 1 : -1;
    });
    }
  },
  image: {
    source: "11tybundle-dev.jpg",
    alt: "an address plate for house number 11"
  }
}
---

{% if linkstodocs[category] %}
<h2>Official 11ty docs</h2>
<div class="officialdocs">
  <p class="bundleitem-title"><a href="{{ linkstodocs[category] }}" target="_blank">{{ category }}</a></p>
  <p class="bundleitem-description">{{ linkstodocs[category] | getDescription | truncate(100) }}</p>
  {%- if category == "Deployment" %}
  <p class="bundleitem-description">See the <a href="https://www.11ty.dev/docs/deployment/#providers" target="_blank">list of providers on the 11ty docs site.</a></p>
  {%- endif %}
</div>
{% endif %}


<h1>{{ title }}</h1>

<div class="bundleposts">
  {% for item in bundledata.bundleRecords | postsInCategory(category) %}
  <div class="bundleitem">
    <p class="bundleitem-title"><a href="{{ item.Link }}" target="_blank">{{ item.Title }}</a></p>
    <p class="bundleitem-description">{{ item.Link | getDescription | truncate(100) }}</p>
    <p class="bundleitem-dateline">{% if item.Author %}<a href="/authors/{{ item.Author | slugify }}/">{{ item.Author }}</a>{% endif %}{% if item.Date %} &middot; {{ item.Date | formatItemDate }}{% endif %}</p>
    <p class="bundleitem-categories">{% if item.Categories %}Categories: {% for item in bundledata.bundleRecords | getItemCategories(item.Link) | sort %}{% for category in item.Categories | sort %}<a href="/categories/{{category | slugify }}/">{{ category }}</a>&nbsp;&nbsp;{% endfor %}{% endfor %}{% endif %}</p>
  </div>
  {% endfor %}
</div>
